// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// definindo schema (Como nossa estrutura do db ir√° se parecer)

model Epis {
  id           Int            @id @default(autoincrement())
  epi          String
  ca           Int
  employeeEpis EmployeeEpis[]
}

model EmployeeEpis {
  id               Int             @id @default(autoincrement())
  activity         String
  epis             Epis[]
  Employees_data   Employees_data? @relation(fields: [employees_dataId], references: [id])
  employees_dataId Int?
}

model Employees_data {
  id           Int            @id @default(autoincrement())
  isActive     Boolean?       @default(false)
  employeeName String         @db.VarChar(40)
  cpf          String         @unique
  rg           String         @unique
  gender       Gender
  birthDate    String
  position     String
  hasEpi       Boolean?       @default(false)
  employeeEpis EmployeeEpis[]
  employeeFile String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

enum Gender {
  M
  F
}
